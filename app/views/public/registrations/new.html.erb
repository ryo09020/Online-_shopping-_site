<h5 class="col-2 bg-light m-4 text-center">新規会員登録</h2>

<%= form_with model: @customer, url: customer_registration_path do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>
  <table class="m-5">
    <tr>
      <td>名前</td>
      <td><%= f.label :last_name, "姓" %>
          <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", class: "form-control" %></td>
      <td><%= f.label :first_name,"名" %>
          <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", class: "form-control" %></td>
    </tr>
    
    <tr>
      <td>フリガナ</td>
      <td><%= f.label :last_name_kana, "セイ" %>
          <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana", class: "form-control" %></td>
      <td><%= f.label :first_name_kana,"メイ" %>
          <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" , class: "form-control"%></td>
    </tr>
    
    <tr>
      <td><%= f.label :email, "メールアドレス" %></td>
      <td><%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %></td>
    </tr>
    
    <tr>
      <td><%= f.label :postal_code, "郵便番号（ハイフンなし）" %></td>
      <td><%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code", class: "form-control" %></td>
    </tr>
    
    <tr>
      <td><%= f.label :address, "住所" %></td>
      <td colspan="2"><%= f.text_field :address, autofocus: true, autocomplete: "address", class: "form-control"%></td>
    </tr>
    
    <tr>
      <td><%= f.label :phone_number, "電話番号（ハイフンなし）" %></td>
      <td><%= f.text_field :phone_number, autofocus: true, autocomplete: "phone_number", class: "form-control" %></td>
    </tr>
    
    <tr>
      <td><%= f.label :password, "パスワード"%>
          <% if @minimum_password_length %>
            (<%= @minimum_password_length %>文字以上)
          <% end %></td>
      <td><%= f.password_field :password, autocomplete: "new-password", class: "form-control" %></td>
    </tr>
    
    <tr>
      <td><%= f.label :password_confirmation, "パスワード（確認用）" %></td>
      <td><%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %></td>
    </tr>
    
    <tr>
      <td></td>
      <td><%= f.submit "新規登録" ,class:"btn-success btn"%></td>
    </tr>
  </table>
<% end %>

<h5 class="col-3 bg-light m-4 ">すでに登録済みの方はこちらから</h2>
  <div class="mx-5">
    <%= render "public/shared/links" %>
  </div>
