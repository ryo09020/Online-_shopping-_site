<h2>配送先登録/一覧</h2>
<%= render 'template/error_str',record:@address %>
<%= form_with model: @address,url: addresses_path(@address.id) do |f| %>
    郵便番号(ハイフンなし)
    <%= f.text_field :ad_number %><br>
    住所
    <%= f.text_field :address %><br>
    宛名
    <%= f.text_field :addressee %>
    <%= f.hidden_field :customer_id, :value => current_customer.id %>
    <%= f.submit '新規登録',class:"btn btn-success" %>
<% end %>

<table>
    <tr>
        <th>郵便番号</th>
        <th>住所</th>
        <th>宛名</th>
        <th colspan="3"></th>
    </tr>
    <% @addresses.each do |address| %>
    <tr>
        <td><%= address.ad_number %></td>
        <td><%= address.address %></td>
        <td><%= address.addressee %></td>
        <td><%= link_to "編集する", edit_address_path(address.id)%>
            <%= link_to "削除する", address_path(address.id), method: :delete %></td>
    </tr>
    <% end %>
    
    
</table>
