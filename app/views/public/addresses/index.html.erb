<h2>配送先登録/一覧</h2>
<%= render 'template/error_str',record:@address %>

<%= render 'template/new_ad',address:@address%>
<table>
    <tr>
        <th>郵便番号</th>             
        <th>住所</th>
        <th>宛名</th>
        <th colspan="3"></th>
    </tr>
    <% @addresses.each do |address| %>
    <tr>
        <td><%= address.ad_number %></td>
        <td><%= address.address %></td>
        <td><%= address.addressee %></td>
        <td><%= link_to "編集する", edit_address_path(address.id)%>
            <%= link_to "削除する", address_path(address.id), method: :delete %></td>
    </tr>
    <% end %>
    
    
</table>
