<h1>Public::Items#index</h1>
<p>Find me in app/views/public/items/index.html.erb</p>

    <% @items.each do |item| %>
        <% next if item.sales_status==false %>
        
        <% if item.image.attached? %>
            <%=image_tag item.image,size: "200x200" %>
        <% end %>
        <%=item.name %>
        <%=item.price_no_tax %>
        <%= link_to "商品詳細",item_path(item.id)%>
        <%= item.sales_status %>
        
    <% end %>
   