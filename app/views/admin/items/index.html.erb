<h1>Admin::Items#index</h1>

<%= link_to "商品登録", new_admin_item_path %>

<table>
    <tr>
        <th>商品ID</th>
        <th>商品名</th>
        <th>税抜価格</th>
        <th>ジャンル</th>
        <th>ステータス</th>
    </tr>
    <tbody>
        <% @items.each do |item| %>
        <tr>
            <td><%=item.id %></td>
            <td><%=link_to admin_item_path(item.id) do %><%=item.name %><%end%></td>
            <td><%=item.price_no_tax %></td>
            <td><%=item.genre_id %></td>
            <td><%=item.sales_status %></td>
        </tr>
        <% end %>
    </tbody>
</table>