<h1>Admin::Items#new</h1>
<p>Find me in app/views/admin/items/new.html.erb</p>
    <%= form_with model: @item ,url: admin_items_path, method: :post do |f| %>
        
        <h4>商品画像</h4>
          <%= f.file_field :image %>
        <h4>商品名</h4>
          <%= f.text_field :name %>
        <h4>商品説明</h4>
          <%= f.text_area :body %>
        <h4>ジャンル</h4>
          <%= f.collection_select :genre_id, Genre.all, :id, :name,include_blank: "--選択してください--" %>
        <h4>税抜き価格</h4>
          <%= f.number_field :price_no_tax %>
        <h4>販売ステータス</h4>
          <%= f.radio_button :sales_status, true %> 販売中
          <%= f.radio_button :sales_status, false %> 販売停止中
        <%= f.submit 'Create Book',class:"btn btn-success" %>
        
    <% end %>