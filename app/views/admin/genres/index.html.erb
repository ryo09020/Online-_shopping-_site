<h1>Admin::Genres#index</h1>
<% if @genre.errors.any? %>
  <%= @genre.errors.count %>errors prohibited this obj from being saved:
  <ul>
    <% @genre.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<%= form_with model: @genre,url: admin_genres_path do |f| %>
    <h4>ジャンル名</h4>
    <%= f.text_field :name %>
    <%= f.submit 'Create Book',class:"btn btn-success" %>
<% end %>

<table>
    <tr>
        <th>ID</th>
        <th>ジャンル名</th>
        <th></th>
    </tr>
    <tbody>
    <% @genres.each do |genre| %>
    <tr>
        <td><%= genre.id%></td>
        <td><%= genre.name%></td>
        <td><%= link_to "編集する", edit_admin_genre_path(genre.id) %></td>
    </tr>  
    <% end %>
    </tbody>
</table>