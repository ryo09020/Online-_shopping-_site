<h1>Admin::Customers#index</h1>
<p>Find me in app/views/admin/customers/index.html.erb</p>
<table>
    <thread>
        <tr>
            <th>会員ID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
        </tr>
    </thread>
    <tbody>
    <% @customers.each do |customer| %>
        <tr>
            <td><%= customer.id %></td>
            <td><%= link_to admin_customer_path(customer.id) do%>
                    <%= customer.last_name %><%= customer.first_name %>
                <% end %>
            </td>
            <td><%= customer.email %></td>
            <td><% if customer.is_active %>
                    有効
                <% else %>
                    退会
                <% end %>
            </td>
        </tr>        
    <% end %>
        
    </tbody>
</table>